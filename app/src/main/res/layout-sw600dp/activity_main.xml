<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/gunbackground" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chamberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/chambers"
        android:textColor="@color/white"
        android:textSize="23sp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.618"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/chamberSpinner"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:textColor="@color/white"
        ads:layout_constraintTop_toBottomOf="@+id/chamberTextView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/chamberSpinner"
        android:layout_alignRight="@+id/chamberSpinner"
        android:layout_alignBottom="@+id/chamberSpinner"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/chevron"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.111"
        ads:layout_constraintStart_toStartOf="@+id/chamberSpinner"
        ads:layout_constraintTop_toBottomOf="@+id/chamberTextView"
        ads:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/bulletTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/bullets"
        android:textColor="@color/white"
        android:textSize="23sp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.618"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/bulletSpinner"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:spinnerMode="dropdown"
        android:textColor="@color/white"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/bulletTextView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/bulletSpinner"
        android:layout_alignRight="@+id/bulletSpinner"
        android:layout_alignBottom="@+id/bulletSpinner"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/chevron"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.996"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/bulletTextView"
        ads:layout_constraintVertical_bias="0.039" />

    <TextView
        android:id="@+id/chambersRemainingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:text="Chambers Remaining"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        ads:layout_constraintBottom_toTopOf="@+id/bulletsRemainingTextView"
        ads:layout_constraintEnd_toStartOf="@+id/chambersRemainingValue"
        ads:layout_constraintHorizontal_bias="0.634"
        ads:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chambersRemainingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="184dp"
        android:layout_marginRight="184dp"
        android:layout_marginBottom="10dp"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="20sp"
        ads:layout_constraintBottom_toTopOf="@+id/bulletsRemainingValue"
        ads:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/bulletsRemainingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:text="Bullets Remaining"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        ads:layout_constraintBottom_toTopOf="@+id/multiPurposeButton"
        ads:layout_constraintEnd_toStartOf="@+id/bulletsRemainingValue"
        ads:layout_constraintHorizontal_bias="0.676"
        ads:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bulletsRemainingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="184dp"
        android:layout_marginRight="184dp"
        android:layout_marginBottom="10dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="20sp"
        ads:layout_constraintBottom_toTopOf="@+id/multiPurposeButton"
        ads:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/multiPurposeButton"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/buttonshape"
        android:textColor="@color/white"
        android:textSize="26sp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>